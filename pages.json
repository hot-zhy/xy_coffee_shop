{
	"easycom": {
			"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
		},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"mp-weixin": {
					
				}
			}
		}
	    ,{
            "path" : "pages/class/class",
            "style" :                                                                                    
            {
				"navigationStyle": "default",
                "navigationBarTitleText": "分类",
                "enablePullDownRefresh": false
            }
            
        },
		{
		    "path" : "pages/cart/cart",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "购物车",
		        "enablePullDownRefresh": false,
				"navigationStyle": "custom"
		    }
		    
		}
        ,{
            "path" : "pages/my/my",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "我的",
                "enablePullDownRefresh": false,
				"navigationStyle": "default"
            }
            
        }
        ,{
            "path" : "pages/search/search",
		  "style": {
			  "navigationStyle": "default",
				"app-plus": {
					"scrollIndicator": "none",
					"titleNView": {
						"searchInput": {
							"align": "left",
							"backgroundColor": "#F7F7F7",
							"borderRadius": "4px",
							"disabled": false,
							"autoFocus": true,
							"placeholder": "挂耳混拼|给啥喝啥 里边儿请-",
							"placeholderColor": "#CCCCCC"
						},
						"buttons":[
									{
										"color":"#989898",
										"colorPressed":"#FD6801",
										"float":"right",
										"fontSize":"16px",
										"text":"搜索"
									}
								]
					}
			}
		  }
            
        },
		{
		  "path" : "pages/search-list/search-list",
		  "navigationBarTitleText": "小野咖啡铺",
		  "style": {
			  "navigationStyle": "default",
			"app-plus": {
				"scrollIndicator": "none",
				"titleNView": {
					"searchInput": {
						"align": "left",
						"backgroundColor": "#F7F7F7",
						"borderRadius": "4px",
						"disabled": false,
						"placeholder": "挂耳混拼|给啥喝啥 里边儿请-",
						"placeholderColor": "#CCCCCC"
					},
					"buttons":[
								{
									"color":"#989898",
									"colorPressed":"#FD6801",
									"float":"right",
									"fontSize":"16px",
									"text":"搜索"
								}
							]
				}
			}
		  }
		    
		}
        ,{
            "path" : "pages/detail/detail",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "商品详情",
                "enablePullDownRefresh": false,
				"navigationStyle": "default"
            }
            
        }
        ,{
            "path" : "pages/first-category/first-category",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "商品列表",
                "enablePullDownRefresh": false,
				"navigationStyle": "default"
            }
            
        }
        ,{
            "path" : "pages/second-category/second-category",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "商品列表",
                "enablePullDownRefresh": false,
				"navigationStyle": "default"
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "小野咖啡铺",
		"navigationBarBackgroundColor": "#FFFFFF",
		"backgroundColor": "#F7F7F7",
		"navigationStyle":"custom"
	},
	"uniIdRouter": {},
	// 底部导航栏
	"tabBar": {
		"color": "#b1b1b1",
		"selectedColor": "#966034",
		"borderStyle": "black",
		"backgroundColor": "white",
		"list": [
			{
				"pagePath": "pages/index/index",
				"text": "首页",
				"iconPath": "static/tabbar/index.png",
				"selectedIconPath": "static/tabbar/index_selected.png"
			},
			{
				"pagePath": "pages/class/class",
				"text": "分类",
				"iconPath": "static/tabbar/category.png",
				"selectedIconPath": "static/tabbar/category_selected.png"
			},{
				"pagePath": "pages/cart/cart",
				"text": "购物袋",
				"iconPath": "static/tabbar/cart.png",
				"selectedIconPath": "static/tabbar/cart_selected.png"
			},{
				"pagePath": "pages/my/my",
				"text": "我的",
				"iconPath": "static/tabbar/my.png",
				"selectedIconPath": "static/tabbar/my_selected.png"
			}
		]
	}
	
}
